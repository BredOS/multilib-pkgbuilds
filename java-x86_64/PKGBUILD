pkgname=jdk-openjdk-x86_64
pkgver=24.0.2
pkgrel=1
arch=('any')
pkgdesc="OpenJDK 23.0.1 runtime and development environment for x86_64 (via Box64)"
license=('GPL2')
depends=('box64')
options=('!strip')
source=("https://download.oracle.com/java/24/latest/jdk-24_linux-x64_bin.tar.gz")
sha256sums=('5f9f7c4ca2a6cef0f18a27465e1be81bddd8653218f450a329a2afc9bf2a1dd8')

package() {
    install -dm755 "$pkgdir/usr/lib/jvm/java-${pkgver}-x86_64"
    cp -r "$srcdir/jdk-${pkgver}/"* "$pkgdir/usr/lib/jvm/java-${pkgver}-x86_64"
}
